<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_weight="1">
    <Button
        style="@style/MainTab"
        android:id="@+id/dialpad_tab"
        android:onClick="onClickDialpad"
        android:text="@string/dialpad"
        android:textSize="14dp"/>
    <Button
        style="@style/MainTab"
        android:id="@+id/contact_tab"
        android:onClick="onClickContact"
        android:text="@string/contact"
        android:textSize="14dp"/>
    <Button
        style="@style/MainTab"
        android:id="@+id/conference_tab"
        android:onClick="onClickConfirence"
        android:text="@string/conference"
        android:textSize="14dp"/>
</LinearLayout>